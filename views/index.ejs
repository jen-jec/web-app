<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Review App</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>*Finished Books*</h1>
      <a href="/add" class="btn btn-primary">Add New Book</a>
    </header>

    <section>
      <% if (books.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author</th>
              <th>Review</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach((book) => { %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.review %></td>
                <td>
                  <a href="/edit/<%= book.id %>" class="btn btn-secondary">Edit</a>
                  <form action="/delete/<%= book.id %>" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No books found. Add a new book to get started!</p>
      <% } %>
    </section>
  </div>
</body>
</html>
